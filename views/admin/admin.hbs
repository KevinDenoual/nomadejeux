<!------------ section ajout card jeux ------------>

<section class="artcile brdt">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h2>Ajouter un jeu</h3>
            </div>

            <form action="/admin/createJeux" method="POST" enctype="multipart/form-data" >
                <div class="form-group">
                    <label>Titre</label>
                    <input type="text" class="form-control" name="titre">
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <textarea class="form-control" type="text" name="description"></textarea>
                </div>
                <div class="row form-group">
                    <div class="col-md-4">
                        <label>Age</label>
                        <input type="number" class="form-control" name="age">
                    </div>
                    <div class="col-md-4">
                        <label>Nombre de joueur</label>
                        <input type="number" class="form-control" name="joueur">
                    </div>
                    <div class="col-md-4">
                        <label>Durée</label>
                        <input type="text" class="form-control" name="duree">
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-md-6">
                        <label>Type</label>
                        <input type="text" class="form-control" name="type">
                    </div>
                    <div class="col-md-6">
                        <label>Difficulté</label>
                        <input type="text" class="form-control" name="difficulte">
                    </div>
                </div>
                <div class="form-group">
                    <label>Editeur/Illustrateur</label>
                    <input type="text" class="form-control" name="editeur">
                </div>
                <div class="file">
                    <label class="file-label">
                        <input class="file-input" type="file" name="image">
                        <span class="file-cta">
                            <span class="file-icon">
                                <i class="fas fa-upload"></i>
                            </span>
                            <span class="file-label">
                                Envoyer une image au format .jpg .jpeg .gif uniquement
                            </span>
                        </span>
                    </label>
                </div>
                <div class="row form-group">
                    <div class="col-md-4">
                        <div class="form-group">
                            <select class="form-control" name="jeuxselect">
                                <option value="societe">jeux de société</option>
                                <option value="bois">jeu en bois</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-md-3 mb-3 btn">
                        <button type="submit">Enregistrer</button>
                    </div>
                </div>
            </form>

        </div>
    </div>
</section>


